    <script>
        function redirectToIndex() {
            window.location.href = '/Home/Index';
        }

        function saveData() {
            debugger;
            const form = document.getElementById('dataForm');
            const formData = new FormData(form);

            const data = {};
            formData.forEach((value, key) => {
                data[key] = value;
            });

            //Manually handle checkboxes to store boolean values
            const checkboxes = form.querySelectorAll('input[type="checkbox"]'); 
            checkboxes.forEach((checkbox) => { data[checkbox.name] = checkbox.checked });
               // true if checked, false if unchecked 
            // Get the Save button
            const saveButton = document.getElementById('saveButton');

            // Disable the button and change the text to "Saving..."
            saveButton.disabled = true;
            saveButton.textContent = 'Saving...';

            fetch('/Home/Save', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        // Change button text to "Saved"
                        saveButton.textContent = 'Saved';
                        saveButton.disabled = false;
                    } else {
                        // Reset button state on failure
                        saveButton.textContent = 'Save';
                        saveButton.disabled = false;
                        alert(result.message || 'Failed to save data.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Reset button state on error
                    saveButton.textContent = 'Save';
                    saveButton.disabled = false;
                });
        }


        function increment(button) {
            var num = button.previousElementSibling;
            num.value = parseInt(num.value) + 1;
        }

        function decrement(button) {
            var num = button.nextElementSibling;
            num.value = parseInt(num.value) - 1;
        }
    </script>



