<style>
    input[type="checkbox"] {
        width: 0;
        height: 0;
        visibility: hidden;
    }

    .hide {
        border: none;
    }

    .toggle {
        cursor: pointer;
        text-indent: -9999px;
        width: 52px;
        height: 27px;
        background: grey;
        display: block;
        border-radius: 100px;
        position: relative;
    }

        .toggle:after {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            width: 23px;
            height: 23px;
            background: #ccc;
            border-radius: 90px;
            transition: 0.3s;
        }

    input:checked + .toggle {
        background: #901F17;
    }

        input:checked + .toggle:after {
            left: calc(100% - 2px);
            transform: translateX(-100%);
        }

    .toggle:active:after {
        width: 30px;
    }
        

    .number-input {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .number-input input[type="number"] {
            width: 80px;
            text-align: center;
            padding: 4px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .number-input button {
            width: 30px !important;
            height: 30px !important;
            font-size: 20px;
            background-color: #901F17;
            color: #fff;
            border: none;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .number-input button:hover {
                background-color: #a62f2a; /* Darken color on hover */
            }

            .number-input button:focus {
                outline: none;
            }

    .responsive-textarea {
        width: 100%;
        min-height: 150px;
        resize: vertical;
        border: 3px solid #000000;
    }

    .card {
        border-radius: 15px; 
        overflow: hidden;
