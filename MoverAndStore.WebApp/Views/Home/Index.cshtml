@model List<CardData>

@{
    Layout = "_Layout";
}
@*
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color:#F4F7FA"> *@
<style>
    .card:hover {
        transform: scale(1.05); /* Slightly enlarge the card on hover */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Add shadow for a "lift" effect */
    }

    .card {
        border-radius: 15px; /* Rounded corners for the card */
        overflow: hidden; /* Ensure the rounded corners apply to inner elements */
    }
</style>
<div class="mb-2">

    <div class="container">

        <h4 class="text-left p-3" style="font-size:32px;padding-left:0px !important">My Deals</h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col-sm-12 col-md-4">
                    <div class="card" style="border: 1px solid #CCC; border-radius: 15px; transition: transform 0.3s ease;">
                        <a href="@Url.Action("Details", "Home", new { id = item.Basic_Information.id })" style="text-decoration: none;">
                            <div class="card-header py-3 d-flex align-items-center justify-content-between" style="background-color: #901F17; color: #000000; border-top-left-radius: 15px; border-top-right-radius: 15px; cursor: pointer;">
                                <h5 class="d-flex align-items-center" style="font-size: 18px; font-weight: bold; color: #ffff; margin: 0;">
                                    @item.Basic_Information.Title
                                </h5>
                                <i class="fas fa-edit" style="color: #ffff;"></i>
                            </div>
                        </a>
                       
                        <div class="card-body py-3 border-bottom d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Home", new { id = item.Basic_Information.id })" style="text-decoration: none; color:#000000">
                            <div class="d-flex flex-column">


                                <p class="d-block mb-2" style="font-weight:bold;font-size:16px;">
                                    @item.Basic_Information.Lead.Customer
                                </p>

                                <p class="d-block mb-1">
                                    @*  <i class="fa fa-calendar"></i> Moving Date : @item.Moving_Date.moving_to_date *@
                                    <i class='fas fa-user-alt'></i> Contact Person: @item.Basic_Information.Lead.Contact_Person
                                </p>

                                <p class="d-block mb-1">
                                    @*  <i class="fa fa-calendar"></i> Moving Date : @item.Moving_Date.moving_to_date *@
                                    <i class="fa fa-phone"></i> Phone: @item.Basic_Information.Lead.Contact_Person_Telephone
                                </p>

                                <p class="d-block mb-1">
                                    <i class='fas fa-user-plus'></i> Team Members: @item.Additional_Info.Number_Of_Movers
                                </p>
                                <p class="d-block mb-1">
                                    @*  <i class="fa fa-calendar"></i> Moving Date : @item.Moving_Date.moving_to_date *@
                                    <i class="fa fa-calendar"></i> Moving Date: 12-Dec-24
                                </p>
                            </div>

                        </div>
                        @*   <div class="card-footer bg-light py-3 border-bottom d-flex align-items-center justify-content-between">
                    <div><button class="btn btn-light-success btn-sm"><i class="fas fa-eye me-1"></i>View</button></div>
                    </div> *@
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@* </body>
</html> *@